<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#000000">
    <link rel="icon" type="image/png" href="{{ 'favicon.png' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'favicon.png' | asset_url }}">
    <link rel="canonical" href="{{ canonical_url }}">
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    <title>{{ page_title }}{% if current_tags %} - {{ current_tags | join: ', ' }}{% endif %}{% if current_page != 1 %} - Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} - {{ shop.name }}{% endunless %}</title>
    {{ content_for_header }}
    {{ 'tailwind.css' | asset_url | stylesheet_tag }}
  </head>
  <body class="bg-black text-white font-body antialiased" data-template="{{ template.name }}" data-template-suffix="{{ template.suffix }}">
    {% section 'header' %}

    <main id="main" role="main" class="pt-24">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <div data-cart-section>
      {% section 'cart-drawer' %}
    </div>

    <a class="wa-float" href="https://wa.me/17736419111" target="_blank" rel="noopener noreferrer" aria-label="Contact us on WhatsApp">
