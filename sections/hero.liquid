<section class="section hero">
  <div class="container hero-grid">
    <div class="hero-content">
      <p class="eyebrow text-red">Engineered for the relentless</p>
      <h1 class="hero-title">Minimal hardware. Maximum domination.</h1>
      <p class="hero-copy text-muted">Northernwest crafts premium gaming accessories tuned for pro-grade performance, precision control, and ruthless durability.</p>
      <div class="hero-actions">
        <a class="btn btn-primary" href="/collections">Shop the gear</a>
      </div>
    </div>
    <div class="hero-visual">
      <div class="visual-frame" aria-label="Compass visual">
        <svg class="visual-svg" viewBox="0 0 400 400" role="img" aria-label="Compass">
          <circle cx="200" cy="200" r="150" fill="#ffffff" stroke="#111111" stroke-width="10" />
          <circle cx="200" cy="200" r="120" fill="#000000" stroke="#ff0000" stroke-width="6" />
          <circle cx="200" cy="200" r="8" fill="#ff0000" />

          <g stroke="#ffffff" stroke-width="4">
            <line x1="200" y1="60" x2="200" y2="80" />
            <line x1="200" y1="320" x2="200" y2="340" />
            <line x1="60" y1="200" x2="80" y2="200" />
            <line x1="320" y1="200" x2="340" y2="200" />
          </g>

          <polygon points="200,90 220,200 200,210 180,200" fill="#ff0000" />
          <polygon points="200,310 220,200 200,190 180,200" fill="#ffffff" />

          <circle cx="200" cy="200" r="16" fill="#ffaa33" stroke="#111111" stroke-width="4" />
        </svg>
      </div>
    </div>
  </div>
</section>

